{
  "manifest_version": 2,
  "name": "Weak eye",
  "version": "1.0",
  "description": "Tools for visually impaired.",
  "browser_action": {
    "default_icon": {
      "16": "icon/eye_16.png",
      "32": "icon/eye_32.png",
      "48": "icon/eye_48.png",
      "64": "icon/eye_64.png"
    },
    "default_title": "Weak eye",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["jquery.js", "content.js"]
  }]
}